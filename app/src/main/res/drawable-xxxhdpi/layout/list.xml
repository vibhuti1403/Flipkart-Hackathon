<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rcpl.flipkartassisstantnew.ItemDetailsActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="384dp"
        android:layout_height="0dp"
        android:src="@drawable/kurti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buy"
        app:layout_constraintStart_toStartOf="@+id/buy"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="84dp"
        android:layout_height="0dp"

        android:layout_marginBottom="198dp"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toTopOf="@+id/pics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pics"
        android:layout_width="295dp"
        android:layout_height="0dp"
        android:layout_marginBottom="114dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="274dp"
        app:layout_constraintBottom_toTopOf="@+id/buy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/pics" />

    <TextView
        android:id="@+id/price"
        android:layout_width="131dp"
        android:layout_height="0dp"
        android:layout_marginBottom="52dp"
        android:layout_marginStart="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pics" />
</android.support.constraint.ConstraintLayout>